# StudyBuddy Environment Variables
# Copy this file to .env and fill in your actual values

# ============================================
# Database
# ============================================
DATABASE_URL="postgresql://dev:devpass@localhost:5432/studybuddy"

# ============================================
# Frontend (Next.js)
# ============================================

# NextAuth
NEXTAUTH_SECRET="your-secret-key-min-32-characters-change-in-production"
NEXTAUTH_URL="http://localhost:3000"

# OAuth Providers
GOOGLE_OAUTH_CLIENT_ID="your-google-client-id"
GOOGLE_OAUTH_CLIENT_SECRET="your-google-client-secret"

# GCP (for production)
GCS_BUCKET="studybuddy-materials"
GCS_PROJECT_ID="your-gcp-project-id"
CLOUD_TASKS_QUEUE="studybuddy-jobs"
CLOUD_TASKS_LOCATION="us-central1"
ENABLE_GCS_STORAGE="false"
ALLOW_GCS_LOCAL_FALLBACK="true"
ENABLE_CLOUD_TASKS="false"

# AI Service URL
AI_SERVICE_URL="http://localhost:8000"
AI_INTERNAL_TOKEN="replace-with-shared-secret"

# ============================================
# AI Service (Python)
# ============================================

# LLM Configuration
LLM_PROVIDER="openai"  # openai or anthropic

# OpenAI
OPENAI_API_KEY="your-openai-api-key-here"
OPENAI_MODEL="gpt-5-mini"
OPENAI_MINI_MODEL="gpt-5-mini"
OPENAI_EMBEDDING_MODEL="text-embedding-3-small"
OPENAI_REALTIME_MODEL="gpt-realtime-mini"
OPENAI_REALTIME_VOICE="marin"
OPENAI_TRANSCRIPTION_MODEL="gpt-4o-mini-transcribe"

# Anthropic (optional)
ANTHROPIC_API_KEY="your-anthropic-api-key"
ANTHROPIC_MODEL="claude-sonnet-4-20250514"
ANTHROPIC_MINI_MODEL="claude-3-5-haiku-20241022"

# Processing
ENABLE_PROCESSING=true  # set to false to skip PDF processing in dev
AUTO_EXTRACT_TOPICS_ON_CHUNK=false  # keep false for user-driven topic extraction flow

# Environment
ENVIRONMENT="development"  # development or production
PORT="8000"
